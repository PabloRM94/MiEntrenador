<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_Inicio_sesión">

    <fragment
        android:id="@+id/nav_Inicio_sesión"
        android:name="com.ilerna.mientrenador.ui.authentication.AuthFragment"
        android:label="Inicio sesión"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_nav_home_to_nav_perfil"
            app:destination="@id/nav_perfil" />
    </fragment>
    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.ilerna.mientrenador.ui.authentication.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" >
        <action
            android:id="@+id/action_nav_perfil_to_nav_Tareas"
            app:destination="@id/nav_Tareas" />
        <action
            android:id="@+id/action_nav_perfil_to_nav_entrenamientos"
            app:destination="@id/nav_entrenamientos" />
    </fragment>
    <fragment
        android:id="@+id/nav_Tareas"
        android:name="com.ilerna.mientrenador.ui.tareas.TareasFragment"
        android:label="Tareas"
        tools:layout="@layout/fragment_tareas" />

    <fragment
        android:id="@+id/nav_entrenamientos"
        android:name="com.ilerna.mientrenador.ui.entrenamiento.EntrenamientosFragment"
        android:label="Entrenamientos"
        tools:layout="@layout/fragment_entrenamientos" />




</navigation>