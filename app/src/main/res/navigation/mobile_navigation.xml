<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.ilerna.mientrenador.ui.authentication.AuthFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_nav_home_to_nav_perfil"
            app:destination="@id/nav_perfil" />
    </fragment>
    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.ilerna.mientrenador.ui.authentication.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />
    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.ilerna.mientrenador.ui.tareas.TareasFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_tareas" />

    <fragment
        android:id="@+id/nav_entrenamientos"
        android:name="com.ilerna.mientrenador.ui.entrenamiento.EntrenamientosFragment"
        android:label="Entrenamientos"
        tools:layout="@layout/fragment_entrenamientos" />




</navigation>