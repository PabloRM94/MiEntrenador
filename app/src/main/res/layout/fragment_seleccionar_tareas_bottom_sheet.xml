<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Barra de búsqueda -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewTareas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Buscar tareas" />

    <!-- RecyclerView para las tareas existentes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTareasExistentes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <!-- Botón para confirmar la selección -->
    <Button
        android:id="@+id/buttonConfirmarSeleccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Confirmar selección" />
</LinearLayout>
